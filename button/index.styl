@require '../base'
json('../colors.json')

.zp-button
  min-height: 36px
  min-width: 48px
  max-width: 100%
  box-sizing: border-box
  display: inline-block
  position: relative
  background: transparent
  text-align: center
  outline: none
  user-select: none
  cursor: pointer
  padding: 4px
  -webkit-tap-highlight-color: transparent

  > .button
    zp-font-button()
    display: inline-block
    position: relative
    box-sizing: border-box
    vertical-align: middle
    padding: 0 8px
    min-height: 36px
    min-width: 64px
    max-width: 100%
    line-height: 36px
    background: transparent
    text-align: center
    outline: none
    border-radius: 2px
    user-select: none
    cursor: pointer
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap
    border: none
    -webkit-tap-highlight-color: transparent

  &.is-disabled
    cursor: default
    pointer-events: none

    > .button
      cursor: default
      pointer-events: none

  &.is-raised
    > .button
      zp-shadow-1()

      &:active
        zp-shadow-2()

  &.is-raised&.is-dark
    > .button
      color: $white

  &.is-raised&.is-disabled
    > .button
      box-shadow: none
      background: $black12
      color: $black26

  &.is-raised&.is-dark&.is-disabled
    > .button
        background: $white12
        color: $white30

  &.is-full-width
    width: 100%

    > .button
      width: 100%

  &.is-short
    > .button
      min-width: 48px

  &.is-flat&.is-dark
    > .button
      color: $white

  &.is-flat&.is-disabled
    > .button
      color: $black26

  &.is-flat&.is-dark&.is-disabled
    > .button
      color: $white30
